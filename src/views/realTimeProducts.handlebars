<h1>Productos en Tiempo Real</h1>

<form id="addForm">
  <input type="text" name="title" placeholder="Nombre" required />
  <input type="text" name="price" placeholder="Precio"  required />
  <input type="text" name="stock" placeholder="Stock"  required />
  <button type="submit">Agregar</button>
</form>

<form id="deleteForm">
  <input name="id" placeholder="ID del producto a eliminar" required />
  <button type="submit">Eliminar</button>
</form>


<div>

  <h2>Lista de productos </h2>
  <ul id="productList">
    {{#each products}}
      <li>{{this.title}} - {{this.price}}</li>
    {{/each}}
  </ul>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/public/index.js"></script>